<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <EditText
        android:id="@+id/usdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter USD"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/currencyOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Currency Value"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/toCurrencyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert to Currency"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/toUsdButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert to USD"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_marginTop="32dp" />
</LinearLayout>
